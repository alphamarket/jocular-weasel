# add this to apache vhost.conf files
<VirtualHost *:80>
	ServerAdmin webmaster@localhost
	ServerName disqus.local
	DocumentRoot "/var/www/disqus/public_html"
	<Directory "/var/www/disqus/public_html">
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>
</VirtualHost>

# add this to /etc/hosts
# 127.0.0.1 disqus.local

